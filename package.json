{
  "name": "ts-starter-demo",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "concurrently 'npm:build:*'",
    "build:cjs": "npm run swc -- -C module.type=commonjs --out-file-extension cjs",
    "build:mjs": "npm run swc -- -C module.type=es6 --out-file-extension mjs",
    "build:types": "dts-bundle-generator src/index.ts -o dist/index.d.ts",
    "dev": "concurrently 'npm:dev:*'",
    "dev:cjs": "npm run build:cjs -- -w",
    "dev:mjs": "npm run build:mjs -- -w",
    "lint": "concurrently 'npm:lint:*'",
    "lint:script": "eslint .",
    "lint:types": "tsc --noEmit",
    "prepare": "husky",
    "release": "concurrently npm:build npm:test npm:lint && pnpm publish -r --dry-run",
    "swc": "swc src -d dist --strip-leading-paths --ignore '**/__tests__/**'",
    "test": "jest"
  },
  "lint-staged": {
    "*.{js,ts,cjs}": [
      "eslint"
    ]
  },
  "devDependencies": {
    "@changesets/changelog-git": "^0.2.0",
    "@changesets/cli": "^2.27.7",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@eslint/js": "^9.6.0",
    "@swc/cli": "^0.4.0",
    "@swc/core": "1.6.13",
    "@swc/jest": "^0.2.36",
    "@types/jest": "^29.5.12",
    "chokidar": "^3.6.0",
    "concurrently": "^8.2.2",
    "dts-bundle-generator": "^9.5.1",
    "eslint": "^9.6.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "globals": "^15.8.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.2",
    "typescript": "^5.5.3",
    "typescript-eslint": "^7.16.0"
  },
  "engines": {
    "pnpm": "^9"
  }
}
